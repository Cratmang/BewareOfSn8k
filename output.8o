: calcDirection
 load v6 - v6
 ;

: drawBG
  i := playerCo
  load v1
	i := map
  v2 := 0
	v3 := mapHeight
	loop while v2 < v0
		i += v3
	again
	i += v1
	v2 := 32
	v4 := tileSize
	v0 := 0
	v1 := 0
	loop
	
		if v1 == 32 begin
			v0 += tileSize
			v1 := 0
			
			i += v3
			if v2 < 32 begin
				i += v4
				v2 += tileSize
			end
			v2 := 32
		else
			sprite v0 v1 8
			v1 += 8
			i += tileSize
		end
		if v0 < 64 then again
;

: drawBGTile
	sprite v0 v1 8
;

: main

